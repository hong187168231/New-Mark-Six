<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.central.marksix.mapper.LotteryMapper">
    <select id="findList" resultType="com.central.common.model.Lottery">
        select * from mks_lottery t
        <where>
            1=1
            <if test="p.isDisplay != null and  p.isDisplay != ''">
                and t.is_display = #{p.isDisplay}
            </if>
            ORDER BY t.sort <choose><when test="p.sortBy != null and  p.sortBy != '' and  p.sortBy == 2"> DESC </when><otherwise> ASC </otherwise></choose>
        </where>
    </select>
</mapper>